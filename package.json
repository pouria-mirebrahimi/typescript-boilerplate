{
  "name": "typescript-boilerplate",
  "version": "1.1.0",
  "author": "Pouria Mirebrahimi <pouria.mirebrahimi@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:watch": "ts-node-dev --cls --respawn src/index.ts",
    "clean": "rimraf coverage dist tmp",
    "prebuild": "yarn lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "yarn clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "format": "prettier --config .prettierrc --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsd": "^0.19.1",
    "typescript": "^5.0.4"
  },
  "repository": "git@github.com:pouria-mirebrahimi/typescript-boilerplate.git",
  "dependencies": {
    "moment-timezone": "^0.5.43"
  },
  "volta": {
    "node": "20.10.0",
    "yarn": "4.0.2"
  }
}
